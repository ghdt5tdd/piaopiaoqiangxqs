/* pages/newList/newList.wxss */

.news-content {
  background: #fff;
  padding: 0 20rpx;
  overflow: hidden;
  min-height: 100vh
}

.news-block {
  margin: 20rpx 0 30rpx;
  padding: 0 20rpx;
  box-shadow: 0rpx -6rpx 6rpx #f5f5f5,
                -6rpx 0rpx 6rpx #f5f5f5,
                6rpx 0rpx 6rpx #f5f5f5,
                0rpx 6rpx 6rpx #f5f5f5;
}

.news-headline {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  padding: 20rpx 0 0;
}

.news-from {
  display: flex;
  align-items: center;
  width: calc(100% - 180rpx);
}

.news-from image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #e7e7e7;
  margin-right: 20rpx;
}

.news-time {
  width: 180rpx;
  font-size: 28rpx;
  color: #999;
  text-align: right;
}

.news-item {
  font-size: 30rpx;
  position: relative;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #e7e7e7;
  margin-right: 140rpx;
}

.news-item:last-child {
  border: none;
}

.news-pic {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  right: -140rpx;
  top: 38rpx;
}

.news-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 36rpx;
}

.news-spec {
  color: #999;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  margin-top: 20rpx;
}
