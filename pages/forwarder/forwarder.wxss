/* pages/forwarder/forwarder.wxss */

.search {
  padding: 10rpx 80rpx 10rpx 20rpx;
}

.forwarder-content {
  height: calc(100vh - 120rpx);
}

.forwarder-list {
  padding: 0 20rpx;
  overflow: hidden;
}

.forwarder-item {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  padding: 20rpx;
  position: relative;
}

.forwarder-item-check {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  z-index: 99;
}

.forwarder-item-check image {
  width: 40rpx;
  height: 40rpx;
}

.forwarder-item-head {
  position: relative;
  padding: 10rpx 40rpx 20rpx 140rpx;
  font-size: 34rpx;
}

.forwarder-item-logo {
  position: absolute;
  top: 0;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #e7e7e7;
}

.forwarder-item-spec {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.forwarder-item-bar {
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
  margin-top: 10rpx;
  line-height: 40rpx;
}

.forwarder-item-bar image {
  width: 36rpx;
  height: 36rpx;
  margin: 2rpx 20rpx 0 0;
}

/**等级图片**/

.forwarder-item-level {
  width: 170rpx;
  height: 32rpx;
  overflow: hidden;
  font-size: 0;
  margin-top: 20rpx;
}

.forwarder-item-level.level-4 {
  width: 136rpx;
}

.forwarder-item-level.level-3 {
  width: 102rpx;
}

.forwarder-item-level.level-2 {
  width: 68rpx;
}

.forwarder-item-level.level-1 {
  width: 34rpx;
}

.forwarder-item-level image {
  display: block;
  float: left;
  width: 32rpx;
  height: 32rpx;
  margin: 0 1rpx;
}
