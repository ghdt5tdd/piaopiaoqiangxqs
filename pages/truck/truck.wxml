<!--pages/truck/truck.wxml-->
<view class='location-map'>
  <image src='{{map}}' mode="widthFix"></image>
</view>
<view class='search'>
  <input placeholder='输入车牌号查询'></input>
  <icon type='search'></icon>
</view>

<view class='location-truck' style='position:fixed;top:60%;left:30%'>
  <image bindtap='show' class='location-truck-icon' src='../../images/truck2.png' style='transform: rotate(30deg)'></image>
  <view class='location-truck-info' hidden='{{hideInfo}}'>
    <view>车牌号码：{{plates}}</view>
    <view>当前车速：{{speed}}km/h</view>
    <view>位置信息：{{location}}</view>
    <view>行驶方向：{{direction}}</view>
    <view>更新时间：{{time}}</view>
    <icon type='clear' bindtap='hide'></icon>
  </view>
</view>