/* pages/location/location.wxss */

.location-map {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.location-map image {
  width: 100%;
}

.location-content {
  position: fixed;
  left: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  background: #fff;
  padding: 0 20rpx;
}

.location-info {
  transition: all 0.2s;
  padding-top: 20rpx;
}

.location-info-detail {
  margin-right: -20rpx;
}

.location-info-items {
  line-height: 60rpx;
  font-size: 30rpx;
  overflow: hidden;
  float: left;
  margin-right: 20rpx;
  display: flex;
  max-width: calc(50% - 20rpx);
  white-space: nowrap;
  text-overflow: ellipsis;
}

.location-info-items:nth-child(even) {
  max-width: 70%;
}

.location-info-label {
  color: #999;
}

.location-info-line {
  border-bottom: 1px solid #e7e7e7;
}

.location-bottom {
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  line-height: 60rpx;
  padding: 10rpx 0;
}
