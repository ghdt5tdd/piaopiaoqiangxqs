/* pages/noticeInfo/noticeInfo.wxss */

page {
  background: #fff;
}

.notce-headline {
  font-size: 32rpx;
  padding: 20rpx;
  line-height: 42rpx;
  text-align: center;
}

.notce-spec {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  padding: 10rpx 0 20rpx;
  border-bottom: 1px solid #e7e7e7;
  margin: 0 20rpx;
}

.notce-mold {
  color: #ff5102;
}

.notce-time {
  font-size: 26rpx;
}

.notce-info {
  padding: 20rpx;
  font-size: 30rpx;
  line-height: 46rpx;
  text-indent: 2rem;
}
