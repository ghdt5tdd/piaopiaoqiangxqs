/* pages/node/node.wxss */

.node-head {
  background: #fff;
  padding: 20rpx;
  border-top: 1px solid #e7e7e7;
}

.node-head-items {
  line-height: 60rpx;
  font-size: 32rpx;
  display: flex;
}

.node-head-label {
  color: #999;
}

.node-list {
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
  position: relative;
}

.node-list-line {
  position: absolute;
  top: 96rpx;
  background: #e7e7e7;
  height: 2rpx;
  left: calc(7% + 23rpx);
  right: calc(7% + 23rpx);
}

.node-list-item {
  float: left;
  position: relative;
  padding: 80rpx 0 40rpx;
  text-align: center;
  font-size: 30rpx;
  width: 16%;
}

.node-list-item:first-child, .node-list-item:last-child {
  width: 14%;
}

.node-item-pic {
  width: 46rpx;
  height: 46rpx;
  margin-bottom: 10rpx;
}

.node-item-num {
  position: absolute;
  font-size: 28rpx;
  color: #999;
  top: 40rpx;
  width: 100%;
  text-align: center;
}

.node-item-num.transit {
  right: 0;
  margin-right: 20rpx;
}

.node-item-num.active {
  color: #f9871b;
}

.node-list-transit {
  width: 2%;
  float: left;
  position: relative;
  padding: 80rpx 0 40rpx;
}

.node-item-icon {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 38rpx;
  right: 0;
  margin-right: -40rpx;
}

.node-logistics {
  background: #fff;
  padding: 50rpx 20rpx 50rpx 190rpx;
  margin-top: 1px;
  min-height: 100vh;
}

.logistics-list-item {
  position: relative;
  border-left: 1px solid #e7e7e7;
  margin-left: 24rpx;
  padding: 0 0 20rpx 56rpx;
}

.logistics-list-item .logistics-list-circle {
  display: block;
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: -20rpx;
  top: -3rpx;
  background: #fff;
  color: #999;
  text-align: center;
}

.logistics-list:first-child .logistics-list-item .logistics-list-circle {
  width: 48rpx;
  height: 48rpx;
  left: -24rpx;
  top: -4rpx;
}

.logistics-list-circle image {
  width: 100%;
}

.logistics-list-txt {
  font-size: 30rpx;
  color: #666;
}

.logistics-list-status {
  font-size: 36rpx;
}

.logistics-list:first-child .logistics-list-txt .logistics-list-detail:first-child,
.logistics-list:first-child .logistics-list-txt .logistics-list-status {
  color: #f9871b;
}

.logistics-list-detail {
  margin: 10rpx 0 20rpx;
  position: relative;
  min-height: 80rpx;
}

.logistics-list-point {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  position: absolute;
  background: #b5b5b5;
  top: 15rpx;
  left: -62rpx;
}

.logistics-list-detail:first-child .logistics-list-point {
  display: none;
}

.logistics-list-time {
  position: absolute;
  top: 0rpx;
  left: -250rpx;
  text-align: right;
}

.logistics-list-detail:first-child .logistics-list-time {
  top: -60rpx;
}

.logistics-list-date {
  font-size: 30rpx;
}

.logistics-list-hour {
  font-size: 24rpx;
}

.logistics-list-location {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #1296db;
  margin: 10rpx 0 40rpx;
}

.logistics-list-location image {
  width: 42rpx;
  height: 42rpx;
  margin-right: 10rpx;
}
