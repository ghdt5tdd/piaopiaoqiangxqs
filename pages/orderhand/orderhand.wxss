/* pages/home/home.wxss */

.login-box {
  position: relative;
  margin: 40rpx 20rpx;
  height: 120rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  padding: 40rpx 40rpx;
  background: #fff;
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}

.login-bottom {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.login-box-left text {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
}

.login-box-right {
  padding-left: 40rpx;
  border-left: 1px solid #e7e7e7;
  line-height: 80rpx;
  color: #ff5102;
}

.search-group {
  overflow: hidden;
  padding: 20rpx 0 0 20rpx;
  background: #fff;
}

.search-bar {
  float: left;
  margin-bottom: 20rpx;
}

.search-label {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

.search-info {
  width: calc(100% - 60rpx);
  border-radius: 10rpx;
  padding: 0 20rpx;
  background: #f4f4f4;
  margin-right: 20rpx;
}

.search-info  input {
  font-size: 30rpx;
  line-height: 60rpx;
  height: 60rpx;
}

.card-box .order-table-items {
  margin: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}

.order-table-opt {
  padding: 20rpx 0;
  position: relative;
  display: block;
}

.order-opt-tip {
  font-size: 28rpx;
  text-align: left;
  color: #999;
  line-height: 30rpx;
}

.order-opt-code {
  position: absolute;
  height: 70rpx;
  width: 70rpx;
  right: 0;
  top: 25rpx;
}

.fixed-bottom {
  border-top: 2rpx solid #e7e7e7;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.fixed-bottom-button {
  position: relative;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 0;
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}

.fixed-bottom-button button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.fixed-bottom-button image {
  width: 40rpx;
  height: 40rpx;
  margin: 12rpx 0;
}

.fixed-bottom-scan {
  width: calc(100% - 200rpx);
  text-align: center;
  background: #ff5102;
  line-height: 80rpx;
  margin: 0 30rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
}

/*二维码弹窗*/

.pop-code {
  position: fixed;
  width: 520rpx;
  height: 600rpx;
  left: 50%;
  top: 50%;
  margin: -300rpx 0 0 -260rpx;
  font-size: 30rpx;
  text-align: center;
  z-index: 999;
  background: #fff;
}

.pop-code-head {
  color: #fd7c29;
  font-size: 36rpx;
  margin: 60rpx 0 30rpx;
}

.pop-code-pic {
  width: 320rpx;
  height: 320rpx;
  margin-top: 30rpx;
}
