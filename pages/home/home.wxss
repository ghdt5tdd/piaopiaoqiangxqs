/* pages/home/home.wxss */

.login-box {
  position: relative;
  margin: 40rpx 20rpx;
  height: 120rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  padding: 40rpx 40rpx;
  background: #fff;
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}

.login-bottom {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.login-box-left text {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
}

.login-box-right {
  padding-left: 40rpx;
  border-left: 1px solid #e7e7e7;
  line-height: 80rpx;
  color: #ff5102;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  display: flex;
  align-items: center;
  background: #f3f4f5;
}

.fixed-bottom-button {
  position: relative;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 0;
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}

.fixed-bottom-button button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.fixed-bottom-button image {
  width: 40rpx;
  height: 40rpx;
  margin: 12rpx 0;
}

.fixed-bottom-scan {
  width: 100%;
  text-align: center;
  background: #ff6a00;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
}

.topage {
  display: flex;
  align-items: center;
  background: #ff6a00;
  color: #fff;
  font-size: 30rpx;
  height: 180rpx;
}

.topage-item {
  width: 25%;
  text-align: center;
  padding: 40rpx 0;
}

.topage-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.module-block {
  background: #fff;
  overflow: hidden;
  padding: 30rpx 0;
  font-size: 28rpx;
}

.module-item {
  float: left;
  width: 33.333333%;
  text-align: center;
  margin: 20rpx 0;
}

.module-item image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.ad {
  height: 160rpx;
  margin: 20rpx 0;
}

.ad image {
  width: 100%;
  height: 160rpx;
}

.news {
  background: #fff;
  padding: 0 20rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

.news-title {
  line-height: 40rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.news-title text {
  font-size: 26rpx;
  color: #999;
}

.news-block {
  margin: 20rpx 0 30rpx;
  padding: 0 20rpx;
  box-shadow: 0rpx -6rpx 6rpx #f5f5f5,
                -6rpx 0rpx 6rpx #f5f5f5,
                6rpx 0rpx 6rpx #f5f5f5,
                0rpx 6rpx 6rpx #f5f5f5;
}

.news-headline {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  padding: 20rpx 0 0;
}

.news-from {
  display: flex;
  align-items: center;
  width: calc(100% - 180rpx);
}

.news-from image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #e7e7e7;
  margin-right: 20rpx;
}

.news-time {
  width: 180rpx;
  font-size: 28rpx;
  color: #999;
  text-align: right;
}

.news-item {
  font-size: 30rpx;
  position: relative;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #e7e7e7;
  margin-right: 140rpx;
}

.news-item:last-child {
  border: none;
}

.news-pic {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  right: -140rpx;
  top: 38rpx;
}

.news-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 36rpx;
}

.news-spec {
  color: #999;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 40rpx;
  margin-top: 20rpx;
}
