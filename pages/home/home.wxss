/* pages/home/home.wxss */
@import '../pay/pay.wxss';
@import '../receipt/receipt.wxss';

.login-box {
  position: relative;
  margin: 40rpx 20rpx;
  height: 120rpx;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  padding: 40rpx 40rpx;
  background: #fff;
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}

.login-bottom {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.login-box-left text {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
}

.login-box-right {
  padding-left: 40rpx;
  border-left: 1px solid #e7e7e7;
  line-height: 80rpx;
  color: #ff5102;
}

.search-head {
  background: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.search-head-news {
  position: relative;
  text-align: center;
  margin-left: 20rpx;
  font-size: 24rpx;
  width: 60rpx;
}

.search-head-news image {
  width: 40rpx;
  height: 40rpx;
}

.search-head-news text {
  display: block;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #ff5102;
  border-radius: 50%;
  color: #fff;
  padding: 0 8rpx;
}

.search-info {
  width: calc(100% - 100rpx);
  border-radius: 10rpx;
  padding: 0 20rpx;
  background: #f4f4f4;
}

.search-info  input {
  font-size: 30rpx;
  line-height: 80rpx;
  height: 80rpx;
}

.card-box .order-table-items {
  margin: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}

.fixed-bottom {
  border-top: 2rpx solid #e7e7e7;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.fixed-bottom-button {
  position: relative;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  text-align: center;
  font-size: 0;
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}

.fixed-bottom-button button {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0
}

.fixed-bottom-button image {
  width: 40rpx;
  height: 40rpx;
  margin: 12rpx 0;
}

.fixed-bottom-scan {
  width: calc(100% - 200rpx);
  text-align: center;
  background: #ff5102;
  line-height: 80rpx;
  margin: 0 30rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
}

/*立即支付*/

.pop-pay {
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 999;
  background: #fff;
}

.pop-pay .pay-head {
  padding: 30rpx 0;
}

.pop-pay .pay-list {
  padding: 30rpx 20rpx;
}

/* 签收*/

.pop-sign, .pop-comment {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 999;
}

.pop-bottom {
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  background: #bbb;
  color: #fff;
}

.pop-bottom-opt {
  float: left;
  width: 50%;
}

/* 红包*/

.pop-coupon {
  position: fixed;
  width: 500rpx;
  height: 500rpx;
  top: 50%;
  left: 50%;
  margin: -250rpx 0 0 -250rpx;
  background: none;
}

.pop-coupon image {
  width: 100%;
}

.pop-coupon  button {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  bottom: 70rpx;
  color: #e51c24;
  background: none;
}

.pop-coupon-info {
  position: absolute;
  width: 100%;
  top: 80rpx;
  text-align: center;
  color: #e51c24;
  font-size: 30rpx;
}

.pop-coupon-amount {
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.pop-coupon-amount text {
  display: block;
  font-size: 68rpx;
  margin: -10rpx 0 20rpx 10rpx;
}

/*上传回单*/

.pop-receipt {
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 999;
  background: #fff;
}

.pop-tip {
  background: #fff;
  width: 80%;
  height: 400rpx;
  left: 10%;
  top: 50%;
  margin-top: -200rpx;
  border-radius: 10rpx;
}

.pop-tip-content {
  height: calc(100% - 260rpx);
  font-size: 30rpx;
  color: #999;
  padding: 20rpx 30rpx;
  line-height: 42rpx;
}

.pop-head-left {
  font-size: 34rpx;
  padding: 30rpx;
  line-height: 60rpx;
}

.pop-opt-right {
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 30rpx;
  line-height: 40rpx;
}

.pop-opt-right view {
  margin-left: 20rpx;
}

/*评价星级*/

.comment-info {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  border-top: 1px solid #e7e7e7;
  padding: 20rpx;
  background: #fff;
  line-height: 40rpx;
  position: relative;
  border-bottom: 1px solid #e7e7e7;
}

.comment-rank {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.comment-star {
  display: flex;
  margin-left: 20rpx;
  align-items: center;
}

.comment-star-pic image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 10rpx;
}

.comment-impress {
  padding: 20rpx;
  background: #fff;
}

.comment-impress label {
  display: inline-block;
  width: 50%;
  font-size: 30rpx;
  line-height: 60rpx;
}

.comment-impress checkbox {
  transform: scale(0.8);
}

.comment-mark {
  background-color: #fff;
  padding: 15rpx 20rpx 30rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

.comment-mark textarea {
  border: 2rpx solid #e0e0e0;
  border-radius: 5rpx;
  padding: 10rpx 20rpx;
  height: 200rpx;
  width: calc(100% - 60rpx);
  position: static;
}

.comment-gallery {
  overflow: hidden;
  padding-bottom: 40rpx;
  background: #fff;
}

.comment-gallery-info {
  float: left;
}

.comment-gallery-info .img, .comment-gallery-upload {
  float: left;
  position: relative;
  border: 1px dashed #e7e7e7;
  width: 140rpx;
  height: 140rpx;
  margin-left: 20rpx;
}

.comment-gallery-info image {
  width: 140rpx;
  height: 140rpx;
}

.comment-gallery-info .delete-btn {
  position: absolute;
  right: 6rpx;
  top: 6rpx;
  font-size: 30rpx;
}

.comment-gallery-upload {
  font-size: 30rpx;
  color: #999;
  text-align: center;
}

.comment-gallery-upload image {
  width: 140rpx;
  height: 140rpx;
}
