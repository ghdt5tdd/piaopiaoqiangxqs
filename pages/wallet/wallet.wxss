/* pages/wallet/wallet.wxss */

.wallet-head {
  background: #ba7a26;
  padding: 30rpx 20rpx;
  font-size: 32rpx;
  position: relative;
  color: #fff;
  height: 140rpx
}

.wallet-head-info {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.wallet-head-account text {
  font-size: 60rpx;
  margin-left: 10rpx;
}

.wallet-head-opt {
  margin-left: 20rpx;
  background: #e69f43;
  padding: 10rpx 40rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
}

.wallet-head-icon {
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  font-size: 120rpx;
}

.wallet-record{
  margin-top: 20rpx;
  padding: 0 20rpx;
  background: #fff;
  height: calc(100% - 320rpx);
  width: calc(100% - 40rpx)
}

.wallet-record-item{
  background: #fff;
  border-bottom: 1px solid #e7e7e7;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}

.wallet-record-item:last-child{
  border:none
}

.wallet-record-account{
  font-size: 26rpx;
  margin-top: 10rpx;
}

.wallet-record-time{
  font-size: 26rpx;
  color: #999;
  margin: 5rpx 0
}

.wallet-record-right{
  text-align: right
}