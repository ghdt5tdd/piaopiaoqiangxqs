/* pages/pay/pay.wxss */

.pay-head {
  font-size: 38rpx;
  text-align: center;
  padding: 60rpx 0;
  margin: 0 20rpx;
  border-bottom: 1px solid #e7e7e7;
}

.pay-head text {
  font-size: 56rpx;
}

.pay-list {
  padding: 20rpx;
}

.pay-item {
  display: flex;
  background: #fff;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
}

.pay-item:last-child {
  border: none;
}

.pay-icon {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.pay-image {
  width: 200rpx;
  height: 100rpx;
}
