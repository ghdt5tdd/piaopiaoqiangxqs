/* pages/coupon/coupon.wxss */

.location-map {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.location-map image {
  width: 100%;
}

.near-map-coupon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
}

.pop-coupon {
  position: fixed;
  width: 500rpx;
  height: 500rpx;
  top: 50%;
  left: 50%;
  margin: -250rpx 0 0 -250rpx;
  background: none;
}

.pop-coupon image {
  width: 100%;
}

.pop-coupon  button {
  position: absolute;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  bottom: 70rpx;
  color: #e51c24;
  background: none;
}

.pop-coupon-info {
  position: absolute;
  width: 100%;
  top: 80rpx;
  text-align: center;
  color: #e51c24;
  font-size: 30rpx;
}

.pop-coupon-amount {
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.pop-coupon-amount text {
  display: block;
  font-size: 68rpx;
  margin: -10rpx 0 20rpx 10rpx;
}

.fixed-bottom-button {
  position: fixed;
  bottom:0;
  left:0;
  width: calc(100% - 60rpx);
  text-align: center;
  background: #ff5102;
  line-height: 80rpx;
  margin: 20rpx 30rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 10rpx;
}
